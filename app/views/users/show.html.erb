		              <%= company.sector.name %>
		            <% end %>
		          </td>
		          <td><%= company.name %></td>
		          <td><%= company.email_user %></td>
		          <td><%= company.active %></td>
		          <td><%= company.state %></td>
		        </tr>
	      	<% end %>
	    <% end %>
	</tbody>
</table>

