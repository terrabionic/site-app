<p id="notice"><%= notice %></p>

<h1>Listing Notes - <small><%= @question.title %></small></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Points</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @question.notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.description %></td>
        <td><%= note.points %></td>
        <td><%= link_to 'Edit', edit_question_note_path(@question, note) %></td>
        <td><%= link_to 'Destroy', question_note_path(@question, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_question_note_path(@question) %>
<%= link_to 'Survey', survey_questions_path(@question.survey) %>
