<p id="notice"><%= notice %></p>

<%= link_to 'Atrás', companies_path %>
<h1>Factores</h1>
<%= link_to 'Nuevo Factor', new_category_path %>

<table>
  <thead>
    <tr>
      <th>Factor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr id="<%= dom_id(category) %>">
        <td><%= link_to category.title , category %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Estas seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


