<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>Empresa:</strong><br>
    <%= f.text_field :company_name %>
  </div>
  
  <div class="field">
    <strong>Direccion:</strong><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <strong>Telefono convencional:</strong><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <strong>Email:</strong><br>
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <strong>Tipo de industria (Sector):</strong><br>
    <%= f.select :sector_id, options_for_select(Sector.all.map{|s|[s.name, s.id]}) %>
    <br>
    <% Sector.where('active = ?',true).each do |sector| %>
      <label>
          <%= image_tag (sector.image.url(:thumb)) %>
          <%= f.radio_button(:sector_id, sector.id) %>
      </label>
      
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>