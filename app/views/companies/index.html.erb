<p id="notice"><%= notice %></p>

<div class="layout">

  <%= render 'shared/nav' %>

  <div class="main">

    <div class="actions-emprered">
      <h1 class="main-headline">Estatus de empresas y consultores</h1>
      <% @states = ['Terminado']%>
    </div><!-- .actions-emprered -->

    <div class="actions-admin">
  
      <% if can? :create, @surveys %>
        <%= link_to 'Diagnósticos', surveys_path %>
      <% end %>

      <% if can? :create, @categories %>
        <%= link_to 'Factores', categories_path %>
      <% end %>

      <% if can? :create, @roles %>
        <%= link_to 'Roles', roles_path %>
      <% end %>

      <% if can? :create, @sectors %>
        <%= link_to 'Sectores', sectors_path %>
      <% end %>

      <% if can? :create, @users %>
        <%= link_to 'Dar de alta nuevo consultor', users_path %>
      <% end %>
    
    </div><!-- .actions-admin -->

    <%= form_tag(companies_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Buscar Empresa" %>
      <%= submit_tag "Buscar" %>
    <% end %>

    <table class="site-table">
    
      <thead>
        <tr>
          <th>Empresa</th>
          <th>Estado</th>
          <th>Etapa</th>
          <th>Fecha</th>
          <th>Sector</th>
          <th>Consultor Emprered</th>
          <th>Consultor AE</th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <% if can? :read, company %>
            <tr>
              <td><%= link_to company.company_name, show_general_path(id:company) %></td>
              <td><%= company.state %></td>
              <td><%= company.stage %></td>
              <td>
                <% if company.date_start %>
                  <strong>Inicio: </strong><%= company.date_start %>
                  <br/>
                <% end %>
                <% if company.date_end %>
                  <strong>Fin: </strong><%= company.date_end %>
                <% end %>
              </td>
              <td>
                <% if company.sector %>
                  <%= company.sector.name %>
                <% end %>
              </td>
              <td>
                <% if current_user.is? 'admin' %>
                  <% unless @states.include?(company.state) %>
                    <% if company.emprered %>
                      <%= link_to company.emprered.name, show_user_admin_path(company.emprered) %>
                      <br> 
                      <%= link_to 'Cambiar Consultor', edit_asign_emprered_path(company) %>
                    <% else %>
                      <%= link_to 'Asignar', edit_asign_emprered_path(company) %>
                    <% end %>
                  <% else %>
                      <% if company.emprered %>
                        <%= link_to company.emprered.name, show_user_admin_path(company.emprered) %>
                      <% end %>
                  <% end %>
                <% else %>
                  <% if company.emprered %>
                    <%= company.emprered.name %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if current_user.is? 'admin' %>
                  <% if company.state == 'Nuevo' %>
                    <% if company.agent %>
                      <%= link_to company.agent.name, show_user_admin_path(company.agent) %>
                    <% end %>
                    Aún no se llega a etapa de análisis de diagnóstico
                  <% elsif company.state == 'Retrasado' %>
                    <% if company.agent %>
                      <%= link_to company.agent.name, show_user_admin_path(company.agent) %>
                      <br>
                      <%= link_to 'Cambiar Consultor', edit_asign_agent_path(company) %>
                    <% else %>
                      Aún no se llega a etapa de análisis de diagnóstico
                    <% end %>
                  <% elsif company.state == 'Terminado' %>
                    <%= link_to company.agent.name, show_user_admin_path(company.agent) %>
                  <% else %>
                    <% if company.agent %>
                      <%= link_to company.agent.name, show_user_admin_path(company.agent) %>
                      <br>
                      <%= link_to 'Cambiar Consultor', edit_asign_agent_path(company) %>
                    <% else %>
                      <%= link_to 'Asignar', edit_asign_agent_path(company) %> 
                    <% end %>
                  <% end %>
                <% else %>
                  <% if company.agent %>
                    <%= company.agent.name %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table><!-- .site-table -->
  
  </div><!-- .main -->

</div><!-- .layout -->

<%= render "shared/footer" %>